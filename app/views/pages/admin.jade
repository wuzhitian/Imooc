extends ../layout
block content
    .container
        .row
            img#show(src="", alt="")
            form.form-horizontal(method="post", action='/admin/movie', enctype="multipart/form-data")
                if movie._id
                    input(type="hidden", name="movie[_id]", value=movie._id)
                .form-group
                    label.col-sm-2.control-label(for="douban") DOUBAN
                    .col-sm-10
                        input#douban.form-control(type="text")
                .form-group
                    label.col-sm-2.control-label(for="inputCategory") Category
                    .col-sm-10
                        //- input#inputCatgtory.form-control(type="text", name="movie[category]", value="#{movie.categoryName}")
                        input#inputCategory.form-control(type="text", name="movie[categoryName]", value=movie.categoryName)
                .form-group
                    label.col-sm-2.control-label Select Category
                    each cat in categories
                        label.radio-inline
                            if movie._id
                                input(type="radio", name="movie[category]" value="#{cat._id}", checked=cat._id.toString()==movie.category)
                            else
                                input(type="radio", name="movie[category]" value="#{cat._id}")
                            | #{cat.name}
                .form-group
                    label.col-sm-2.control-label(for='inputTitle') Title
                    .col-sm-10
                        //- input#inputTitle.form-control(type='text', name="movie[title]", value="#{movie.title}")
                        input#inputTitle.form-control(type='text', name="movie[title]", value=movie.title)
                .form-group
                    label.col-sm-2.control-label(for='inputDirector') Director
                    .col-sm-10
                        //- input#inputDirector.form-control(type='text', name="movie[director]", value="#{movie.director}")
                        input#inputDirector.form-control(type='text', name="movie[director]", value=movie.director)
                .form-group
                    label.col-sm-2.control-label(for='inputCountry') Country
                    .col-sm-10
                        //- input#inputCountry.form-control(type='text', name="movie[country]", value="#{movie.country}")
                        input#inputCountry.form-control(type='text', name="movie[country]", value=movie.country)
                .form-group
                    label.col-sm-2.control-label(for='inputLanguage') Language
                    .col-sm-10
                        //- input#inputLanguage.form-control(type='text', name="movie[language]", value="#{movie.language}")
                        input#inputLanguage.form-control(type='text', name="movie[language]", value=movie.language)
                .form-group
                    label.col-sm-2.control-label(for='inputPoster') Poster
                    .col-sm-10
                        //- input#inputPoster.form-control(type='text', name="movie[poster]", value="#{movie.poster}")
                        input#inputPoster.form-control(type='text', name="movie[poster]", value=movie.poster)
                .form-group
                    label.col-sm-2.control-label(for="uploadPoster") UPLOADPOSTER
                    .col-sm-10
                        input#uploadPoster(type='file', name='uploadPoster')
                .form-group
                    label.col-sm-2.control-label(for='inputFlash') Flash
                    .col-sm-10
                        //- input#inputFlash.form-control(type='text', name="movie[flash]", value="#{movie.flash}")
                        input#inputFlash.form-control(type='text', name="movie[flash]", value=movie.flash)
                .form-group
                    label.col-sm-2.control-label(for='inputYear') Year
                    .col-sm-10 
                        //- input#inputYear.form-control(type='text', name="movie[year]", value="#{movie.year}")
                        input#inputYear.form-control(type='text', name="movie[year]", value=movie.year)
                .form-group
                    label.col-sm-2.control-label(for='inputSummary') Summary
                    .col-sm-10
                        //- textarea#inputSummary.form-control(type='text', name="movie[summary]")#{movie.summary}
                        textarea#inputSummary.form-control(type='text', name="movie[summary]")= movie.summary 
                .form-group
                    .col-sm-offset-2.col-sm-10
                    button.btn.btn-default(type="submit") Record
    script(src="/js/admin.js") 